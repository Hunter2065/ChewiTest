<div id="userListing">
  <% if users&.exists? %>
    <div class="row users-header py-2">
      <span class="col-xl-3">Name</span>
      <span class="col-xl-3">Email</span>
      <span class="col-xl-3">Seniority</span>
      <span class="col-xl-3">City</span>
      <hr class="mt-1 mb-0">
    </div>
    <% users.each do |user| %>
      <div class="row my-1 users-details mb-1">
        <span class="col-xl-3"><%= user.name %></span>
        <span class="col-xl-3"><%= user.email %></span>
        <span class="col-xl-3"><%= user.seniority %></span>
        <span class="col-xl-3"><%= City.find(user.city_id).name %></span>
      </div>
    <% end %>
  <% else %>
    <div class="text-center">
      <div class="col-xl-12 p-5"><span class="fs-6">Hmm.., it's empty ðŸ¤”</span></div>
    </div>
  <% end %>
</div>
