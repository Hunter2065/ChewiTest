<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class="row">
  <div class="col-xl-6">
    <%= form_with method: :get do |f| %>
      <div class="container mt-4">
        <div class="input-group">
          <%= f.text_field :query, placeholder: 'Search', class: 'form-control rounded' %>
          <%= f.submit 'search', class: 'btn btn-outline-primary' %>
        </div>
      </div>
    <% end %>
    <%= render 's_user', users: @s_users %>
  </div>
  <div class="col-xl-6">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th><%= link_to 'New User', new_user_path %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
