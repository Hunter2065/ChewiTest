<table>
  <thead>
    <tr>
      <th>Seniority name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% seniorities.each do |key, filter| %>
      <tr>
        <td>
          <%= link_to '', data: { disable_with: false } do %>
            <div class="form-check seniorities_filter_items">
              <input class="form-check-input" type="checkbox" value="<%= key %>"
                                          id="flexCheckIndeterminate-<%= key %>">
              <label class="form-check-label" for="flexCheckIndeterminate-<%= key %>">
                <%= key + " (#{filter[:size]})" %>
              </label>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
