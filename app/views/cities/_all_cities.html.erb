<div class="filter">
  <h6><%= t '.city_filter' %></h6>
  <div data-controller='toggle-menu'
       data-toggle-menu-visibility-value='false'
       data-toggle-menu-more-button-value="<%= t(".show_more_button") %>"
       data-toggle-menu-less-button-value="<%= t(".show_less_button") %>">
    <% cities.each do |key, filter| %>
      <div class="form-check city_filter_items" data-toggle-menu-target='item'>
        <input class="form-check-input" type="checkbox" value="<%= key %>"
                                    id="flexCheckIndeterminate-<%= key %>">
        <label class="form-check-label">
          <%= City.find(key).name + " (#{filter[:size]})" %>
        </label>
      </div>
    <% end %>
    <%= render 'shared/toggle_menu_buttons' %>
  </div>
</div>
